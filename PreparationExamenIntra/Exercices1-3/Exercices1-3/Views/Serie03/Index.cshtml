@model Exercices1_3.Models.ModelSerie03
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<html xmlns="http://www.w3.org/1999/xhtml">
<head runat="server">
    <title>Affichage d'un nombre à partir d'une liste déroulante</title>

    <style id="style" type="text/css">
        BODY, INPUT, SELECT {
            font-family: Verdana;
            font-size: 16px;
        }

        .sTitreApplication {
            font-size: 32px;
            margin-top: 0px;
        }

        .sTitreSection {
            font-size: 24px;
        }

        .sRecommencer {
            font-size: 10px;
            vertical-align: 3px;
        }

        .sReduit {
            font-size: 10px;
        }

        .visible {
            display: normal;
        }

        .invisible {
            display: none;
        }
    </style>
</head>

<body>

    <div id="divEntete">
        <p class="sTitreApplication">
            Affichage d'un nombre à partir d'une liste déroulante<br />
            par Gabriel Marrero
            <input type="submit" value="Recommencer" id="btnRecommencer" class="sRecommencer" onclick="location.href='/Serie03/Index'" />

        </p>
    </div>

    @using (Html.BeginForm("Index", "Serie03", FormMethod.Post))
    {
    <div id="divListeCategoriesNombres" class="visible">
        Sélectionnez la catégorie de nombres que vous désirez afficher :

      <!--  <select data-val="true" data-val-number="Le champ Categorie doit être un nombre." data-val-required="Le champ Categorie est requis." id="Categorie" name="Categorie" onChange="this.form.submit()">
            <option value="-1">S&#233;lectionnez</option>
            <option value="1">Pairs</option>
            <option value="2">Impairs</option>
            <option value="3">Multiples de 3</option>
            <option selected="selected" value="4">Multiples de 5</option>
        </select> -->

        @Html.DropDownListFor(m=>m.Categorie, new SelectList(
                new List< SelectListItem>()
                {
                new SelectListItem (){ Value="-1", Text="Sélectionnez"},
                new SelectListItem (){ Value="0", Text="Pairs"},
                new SelectListItem (){ Value="1", Text="Impairs"},
                new SelectListItem (){ Value="2", Text="Multiples de 3"},
                new SelectListItem (){ Value="3", Text="Multiples de 5"}
                }," Value", "Text"),new { @onchange = "this.form.submit()"})
        

        <br /><br />

    </div>

    <div id="divListeNombres" class="visible">
        Sélectionnez le nombre en tant que tel :

        @{ 

        }
        <select data-val="true" data-val-number="Le champ Nombre doit être un nombre." data-val-required="Le champ Nombre est requis." id="Nombre" name="Nombre" onChange="this.form.submit()">
            <option value="-1">S&#233;lectionnez</option>
            <option value="5">5</option>
            <option selected="selected" value="10">10</option>
            <option value="15">15</option>
            <option value="20">20</option>
        </select>
        <br /><br />
    </div>

    <div id="divAffichageNombre" class="visible">

        Le nombre sélectionné est 10

    </div>
    <div id="divCopyright" visible="true">
        <p class="sReduit">
            <br /><br />
            &copy; Département d'informatique G.-G.
        </p>
    </div>
    }
</body>
</html>